generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Theater {
  id      Int       @id @default(autoincrement())
  name    String
  location String
  screens Screen[]
}

model Movie {
  id          Int       @id @default(autoincrement())
  title       String
  genre       String
  director    String
  actors      String
  releaseDate DateTime
  theaterId   Int
  theater     Theater   @relation(fields: [theaterId], references: [id])
}


model Screen {
  id          Int      @id @default(autoincrement())
  name        String
  theaterId   Int
  theater     Theater  @relation(fields: [theaterId], references: [id])
  showtimes   Showtime[]
}

model Showtime {
  id       Int       @id @default(autoincrement())
  start    DateTime
  end      DateTime
  screenId Int
  screen   Screen    @relation(fields: [screenId], references: [id])
  bookings Booking[]
}

model Booking {
  id         Int       @id @default(autoincrement())
  userId     Int
  showtimeId Int
  showtime   Showtime  @relation(fields: [showtimeId], references: [id])
  seats      Int
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
}
